{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext"],
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "types": ["node"],
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
